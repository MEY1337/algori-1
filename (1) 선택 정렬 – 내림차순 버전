# 선택 정렬 (내림차순)
def selection_sort_desc(a):
    n = len(a)
    for i in range(n - 1):
        max_idx = i  # 가장 큰 값의 위치를 찾음
        for j in range(i + 1, n):
            if a[j] > a[max_idx]:  # 부등호 방향만 바뀜 (< → >)
                max_idx = j
        a[i], a[max_idx] = a[max_idx], a[i]  # 자리 교환
    return a

# 실행 예시
data = [2, 4, 5, 1, 3]
selection_sort_desc(data)
print(data)  # [5, 4, 3, 2, 1]
